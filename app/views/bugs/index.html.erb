<p id="notice"><%= notice %></p>

<h1>Listing Bugs</h1>

<table>
  <thead>
    <tr>
      <th class="w3-center">Code</th>
      <th class="w3-center">Product</th>
      <th class="w3-center">Component</th>
      <th class="w3-center">Version</th>
      <th class="w3-center">Summary</th>
      <th class="w3-center">Description</th>
      <th class="w3-center">Hardware</th>
      <th class="w3-center">Importance</th>
      <th class="w3-center">Targetmilestone</th>
      <th class="w3-center">Assignedto</th>
      <th class="w3-center">Qacontact</th>
      <th class="w3-center">Url</th>
      <th class="w3-center">Whiteboard</th>
      <th class="w3-center">Keywords</th>
      <th class="w3-center">Tags</th>
      <th class="w3-center">Dependson</th>
      <th class="w3-center">Blocks</th>
      <th class="w3-center">Origestimated</th>
      <th class="w3-center">Hoursworked</th>
      <th class="w3-center">Hoursleft</th>
      <th class="w3-center">Deadline</th>
      <th class="w3-center">Additionalcomments</th>
      <th class="w3-center">Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bugs.each do |bug| %>
      <tr>
        <td class="w3-center"><%= bug.code %></td>
        <td class="w3-center"><%= bug.product %></td>
        <td class="w3-center"><%= bug.component %></td>
        <td class="w3-center"><%= bug.version %></td>
        <td class="w3-center"><%= bug.summary %></td>
        <td class="w3-center"><%= bug.description %></td>
        <td class="w3-center"><%= bug.hardware %></td>
        <td class="w3-center"><%= bug.importance %></td>
        <td class="w3-center"><%= bug.targetmilestone %></td>
        <td class="w3-center"><%= bug.assignedto %></td>
        <td class="w3-center"><%= bug.qacontact %></td>
        <td class="w3-center"><%= bug.url %></td>
        <td class="w3-center"><%= bug.whiteboard %></td>
        <td class="w3-center"><%= bug.keywords %></td>
        <td class="w3-center"><%= bug.tags %></td>
        <td class="w3-center"><%= bug.dependson %></td>
        <td class="w3-center"><%= bug.blocks %></td>
        <td class="w3-center"><%= bug.origestimated %></td>
        <td class="w3-center"><%= bug.hoursworked %></td>
        <td class="w3-center"><%= bug.hoursleft %></td>
        <td class="w3-center"><%= bug.deadline %></td>
        <td class="w3-center"><%= bug.additionalcomments %></td>
        <td class="w3-center"><%= bug.status %></td>
        <td><%= link_to 'Show', bug %></td>
        <td><%= link_to 'Edit', edit_bug_path(bug) %></td>
        <td><%= link_to 'Destroy', bug, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

