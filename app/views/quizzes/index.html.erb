<p id="notice"><%= notice %></p>

<h1>Listing Quizzes</h1>

<table>
  <thead>
    <tr>
      <th>
        <div>
          Code
        </div>
      </th>
      <th>
        <div>
          Name
        </div>
      </th>
      <th>
        <div>
          Description
        </div>
      </th>
      <th>
        <div>
          Displaydescription
        </div>
      </th>
      <th>
        <div>
          Open
        </div>
      </th>
      <th>
        <div>
          Close
        </div>
      </th>
      <th>
        <div class="w3-center">
          Timelimit
        </div>
      </th>
      <th>
        <div>
          Whentimeexpires
        </div>
      </th>
      <th>
        <div class="w3-center">
          Submissiongraceperiod
        </div>
      </th>
      <th>
        <div>
          Gradecategory
        </div>
      </th>
      <th>
        <div>
          Attemptsallowed
        </div>
      </th>
      <th>
        <div>
          Gradingmethod
        </div>
      </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td>
          <div>
            <%= quiz.code %>
          </div>
        </td>
        <td>
          <div>
            <%= quiz.name %>
          </div>
        </td>
        <td>
          <div>
            <%= quiz.description %>
          </div>
        </td>
        <td>
          <div>
            <%= quiz.displaydescription %>
          </div>
        </td>
        <td>
          <div>
            <%= quiz.open %>
          </div>
        </td>
        <td>
          <div>
            <%= quiz.close %>
          </div>
        </td>
        <td>
          <div class="w3-center">
            <%= quiz.timelimit %>
          </div>
        </td>
        <td>
          <div>
            <%= quiz.whentimeexpires %>
          </div>
        </td>
        <td>
          <div class="w3-center">
            <%= quiz.submissiongraceperiod %>
          </div>
        </td>
        <td>
          <div>
            <%= quiz.gradecategory %>
          </div>
        </td>
        <td>
          <div>
            <%= quiz.attemptsallowed %>
          </div>
        </td>
        <td>
          <div>
            <%= quiz.gradingmethod %>
          </div>
        </td>
        <td><%= link_to 'Show', quiz %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

