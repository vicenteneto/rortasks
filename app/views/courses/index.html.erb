<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<table>
  <thead>
    <tr>
      <th>
        <div>
          Code
        </div>
      </th>
      <th>
        <div>
          Fullname
        </div>
      </th>
      <th>
        <div>
          Shortname
        </div>
      </th>
      <th>
        <div class="w3-center">
          Courseidnumber
        </div>
      </th>
      <th>
        <div>
          Summary
        </div>
      </th>
      <th>
        <div>
          Format
        </div>
      </th>
      <th>
        <div class="w3-center">
          Numberofweekstopics
        </div>
      </th>
      <th>
        <div class="w3-center">
          Start
        </div>
      </th>
      <th>
        <div>
          Hiddensections
        </div>
      </th>
      <th>
        <div class="w3-center">
          Newsitemstoshow
        </div>
      </th>
      <th>
        <div>
          Showgrades
        </div>
      </th>
      <th>
        <div>
          Showactivityreports
        </div>
      </th>
      <th>
        <div class="w3-center">
          Maxuploadsize
        </div>
      </th>
      <th>
        <div>
          Defaultroles
        </div>
      </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td>
          <div>
            <%= course.code %>
          </div>
        </td>
        <td>
          <div>
            <%= course.fullname %>
          </div>
        </td>
        <td>
          <div>
            <%= course.shortname %>
          </div>
        </td>
        <td>
          <div class="w3-center">
            <%= course.courseidnumber %>
          </div>
        </td>
        <td>
          <div>
            <%= course.summary %>
          </div>
        </td>
        <td>
          <div>
            <%= course.format %>
          </div>
        </td>
        <td>
          <div class="w3-center">
            <%= course.numberofweekstopics %>
          </div>
        </td>
        <td>
          <div class="w3-center">
            <%= course.start %>
          </div>
        </td>
        <td>
          <div>
            <%= course.hiddensections %>
          </div>
        </td>
        <td>
          <div class="w3-center">
            <%= course.newsitemstoshow %>
          </div>
        </td>
        <td>
          <div>
            <%= course.showgrades %>
          </div>
        </td>
        <td>
          <div>
            <%= course.showactivityreports %>
          </div>
        </td>
        <td>
          <div class="w3-center">
            <%= course.maxuploadsize %>
          </div>
        </td>
        <td>
          <div>
            <%= course.defaultroles %>
          </div>
        </td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

